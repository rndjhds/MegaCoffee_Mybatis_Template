<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cafe.megacoffee.member.repository.MemberMapper">
    <resultMap id="member" type="com.cafe.megacoffee.member.MemberDTO">
        <result column="member_id" property="memberId"></result>
        <result column="password" property="password"></result>
        <result column="username" property="username"></result>
        <result column="email" property="email"></result>
        <result column="member_type" property="memberType"></result>
        <result column="permit_status" property="permitStatus"></result>
        <result column="member_point" property="memberPoint"></result>
        <result column="delete_yn" property="deleteYN"></result>
    </resultMap>

    <insert id="createMember" parameterType="com.cafe.megacoffee.member.MemberDTO">
        insert into
            Member
        values (
                    #{memberId},
                    #{password},
                    #{username},
                    #{email},
                    #{memberType},
                    #{permitStatus},
                    0,
                    'N'
                )
    </insert>

    <select id="hasMemberById" parameterType="String" resultType="int">
        select
            count(member_id)
        from
            Member
        where
            member_id = #{memberId}
    </select>

    <select id="findMemberById" parameterType="com.cafe.megacoffee.member.MemberDTO" resultMap="member">
        select
            *
        from
            Member
        where
            member_id = #{memberId}
        and
            password = #{password}
        and
            delete_yn = 'N'
    </select>


</mapper>